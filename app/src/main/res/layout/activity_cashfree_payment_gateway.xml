<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_merchant"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent"
    tools:context=".CashfreePaymentGateway">
    <RelativeLayout
        android:elevation="5dp"
        android:id="@+id/rlHeader"
        android:background="@color/purple_500"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="50dp"
            android:padding="15dp"
            android:id="@+id/back_img"
            android:tint="@color/white"
            android:src="@drawable/back"
            android:layout_height="50dp">
        </ImageView>
        <TextView
            android:text="CashFree Payment"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/button"
        android:orientation="vertical"
        android:layout_below="@+id/rlHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/upi"
                android:background="@drawable/side_nav_bar"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:onClick="onClick"
                android:layout_weight="1"
                android:text="Upi"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/amazon"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:onClick="onClick"
                android:background="@drawable/side_nav_bar"
                android:layout_weight="1"
                android:text="Amazon"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/web"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:onClick="onClick"
                android:layout_weight="1"
                android:background="@drawable/side_nav_bar"
                android:text="Web Checkout"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/web_seamless"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:onClick="onClick"
                android:layout_weight="1"
                android:background="@drawable/side_nav_bar"
                android:text="Seamless Checkout"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/gpay"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:onClick="onClick"
            android:background="@drawable/side_nav_bar"
            android:text="Gpay"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/phonePe"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:onClick="onClick"
            android:background="@drawable/side_nav_bar"
            android:text="PhonePe"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/phonePe_exists"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:onClick="onClick"
            android:background="@drawable/side_nav_bar"
            android:text="Check PhonePe"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/gpay_ready"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:onClick="onClick"
            android:background="@drawable/side_nav_bar"
            android:text="GPay Ready"/>
    </LinearLayout>
    </LinearLayout>
</RelativeLayout>

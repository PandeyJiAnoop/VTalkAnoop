<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="2dp"
    android:id="@+id/row"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/rounded_rectangle"
                android:orientation="horizontal">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="55dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/astroname"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Anoop Pandey"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/white"/>
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="20dp">
                        <LinearLayout
                            android:background="@drawable/shape_rounded_rectangle"
                            android:layout_width="60dp"
                            android:gravity="center"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_star"/>
                            <TextView
                                android:id="@+id/rating"
                                android:text=" 5.0"
                                android:textColor="@color/blue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="60dp"
                        android:gravity="center"
                        android:layout_height="20dp">
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/diamond"/>
                        <TextView
                            android:id="@+id/price"
                            android:text=" 5.0"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <TextView
                        android:layout_margin="5dp"
                        android:id="@+id/experience"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        android:text=" Experience: 27 + years" />
                    <TextView
                        android:padding="5dp"
                        android:layout_margin="5dp"
                        android:id="@+id/language"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/rounded_rectangle"
                        android:textColor="@color/white"
                        android:text=" Hindi"/>
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_margin="5dp"
                            android:src="@drawable/ic_phone"
                            android:layout_width="20dp"
                            android:layout_height="20dp"/>
                        <ImageView
                            android:layout_margin="5dp"
                            android:src="@drawable/ic_chat_box"
                            android:layout_width="20dp"
                            android:layout_height="20dp"/>
                        <ImageView
                            android:layout_margin="5dp"
                            android:src="@drawable/ic_video_camera"
                            android:layout_width="20dp"
                            android:layout_height="20dp"/>
                        <LinearLayout
                            android:gravity="end"
                            android:layout_marginRight="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:padding="5dp"
                                android:textColor="@color/white"
                                android:background="@drawable/green_rounded_rectangle"
                                android:text="Online"
                                android:id="@+id/status_tv"
                                android:textSize="10sp"
                                android:gravity="center"
                                android:layout_width="70dp"
                                android:layout_height="25dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:gravity="center"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:orientation="horizontal" >
                <com.github.siyamed.shapeimageview.CircularImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:src="@drawable/astro"
                    android:id="@+id/astroimage"
                    />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="175dp"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/rounded_rectangle"
                android:orientation="horizontal">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="55dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Shiva Pandey"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/white"/>
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="20dp">
                        <LinearLayout
                            android:background="@drawable/shape_rounded_rectangle"
                            android:layout_width="60dp"
                            android:gravity="center"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_star"/>
                            <TextView
                                android:text=" 5.0"
                                android:textColor="@color/blue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                        android:text="100 Rs./Min"
                        android:textColor="@color/red"
                        android:textSize="10dp"
                        android:layout_marginLeft="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_margin="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        android:text=" Experience: 3+ years" />
                    <TextView
                        android:padding="5dp"
                        android:layout_margin="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/rounded_rectangle"
                        android:textColor="@color/white"
                        android:text=" English"/>
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_margin="5dp"
                            android:src="@drawable/ic_phone"
                            android:layout_width="20dp"
                            android:layout_height="20dp"/>
                        <ImageView
                            android:layout_margin="5dp"
                            android:src="@drawable/ic_chat_box"
                            android:layout_width="20dp"
                            android:layout_height="20dp"/>
                        <ImageView
                            android:layout_margin="5dp"
                            android:src="@drawable/ic_video_camera"
                            android:layout_width="20dp"
                            android:layout_height="20dp"/>
                        <LinearLayout
                            android:gravity="end"
                            android:layout_marginRight="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:padding="5dp"
                                android:textColor="@color/white"
                                android:background="@drawable/green_rounded_rectangle"
                                android:text="Online"
                                android:textSize="10sp"
                                android:gravity="center"
                                android:layout_width="70dp"
                                android:layout_height="25dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:gravity="center"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:orientation="horizontal" >
                <com.github.siyamed.shapeimageview.CircularImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:src="@drawable/slidethree"
                    />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>
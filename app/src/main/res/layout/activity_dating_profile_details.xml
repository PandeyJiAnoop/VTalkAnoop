<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pink"
    tools:context=".Home.DatingProfileDetails">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/blue"
        android:id="@+id/header"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:text="Details"
            android:textStyle="bold"
            android:textSize="20sp"
            android:id="@+id/name_tv"
            android:fontFamily="sans-serif-condensed-medium"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content">
        </TextView>
        <ImageView
            android:layout_width="50dp"
            android:padding="15dp"
            android:id="@+id/back_img"
            android:tint="@color/white"
            android:src="@drawable/back"
            android:layout_height="50dp">
        </ImageView>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/header"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/img_showProfile"
                    android:layout_width="match_parent"
                    android:layout_height="320dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/loadinggif"
                    android:scaleType="centerCrop"/>


            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardBackgroundColor="#9B4471"
                android:layout_margin="5dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginRight="2dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="5dp"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:id="@+id/chat_online_ll"
                            android:background="@drawable/rectangle_blue"
                            android:layout_height="40dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_gravity="center"
                                android:layout_height="40dp">
                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_marginTop="5dp"
                                    android:padding="5dp"
                                    android:src="@drawable/ic_chat_box"
                                    android:layout_height="30dp">
                                </ImageView>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:textColor="@color/white"
                                    android:text=""
                                    android:gravity="center_vertical"
                                    android:id="@+id/txt_chat"
                                    android:textSize="12sp"
                                    android:layout_height="match_parent">
                                </TextView>

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_marginTop="5dp"
                                    android:padding="5dp"
                                    android:src="@drawable/diamond"
                                    android:layout_height="30dp">
                                </ImageView>

                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:id="@+id/call_online_ll"
                            android:background="@drawable/rectangle_pink"
                            android:layout_marginLeft="2dp"
                            android:orientation="horizontal"
                            android:layout_height="40dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_gravity="center"
                                android:layout_height="40dp">
                                <ImageView
                                    android:layout_width="30dp"
                                    android:src="@drawable/ic_phone"
                                    android:layout_marginTop="5dp"
                                    android:padding="5dp"
                                    android:layout_height="30dp">
                                </ImageView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:textColor="@color/white"
                                    android:text=""
                                    android:gravity="center_vertical"
                                    android:textSize="12sp"
                                    android:id="@+id/txt_call"
                                    android:layout_height="match_parent">
                                </TextView>
                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_marginTop="5dp"
                                    android:padding="5dp"
                                    android:src="@drawable/diamond"
                                    android:layout_height="30dp">
                                </ImageView>

                            </LinearLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:id="@+id/video_call_online"
                            android:layout_marginLeft="2dp"
                            android:background="@drawable/green_rounded_rectangle"
                            android:orientation="horizontal"
                            android:layout_height="40dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_gravity="center"
                                android:layout_height="40dp">
                                <ImageView
                                    android:layout_width="30dp"
                                    android:src="@drawable/ic_video_camera"
                                    android:layout_marginTop="5dp"
                                    android:padding="5dp"
                                    android:layout_height="30dp">
                                </ImageView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:textColor="@color/white"
                                    android:text=""
                                    android:id="@+id/txt_video"
                                    android:gravity="center_vertical"
                                    android:textSize="12sp"
                                    android:layout_height="match_parent">
                                </TextView>
                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_marginTop="5dp"
                                    android:padding="5dp"
                                    android:src="@drawable/diamond"
                                    android:layout_height="30dp">
                                </ImageView>

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:background="@color/white"
                        android:layout_marginTop="10dp"

                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_height="0.3dp">

                    </View>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="The purposes of Friendship"
                        android:layout_margin="10dp"
                        android:textSize="16dp"
                        android:textStyle="bold" />
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:scrollbars="none"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:id="@+id/dynamic_exp"
                            android:layout_height="wrap_content">

                        </LinearLayout>

                    </HorizontalScrollView>
                    <View
                        android:layout_width="match_parent"

                        android:background="@color/white"
                        android:layout_marginTop="10dp"

                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_height="0.3dp">
                    </View>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="Public photos"
                        android:layout_margin="10dp"
                        android:textSize="16dp"
                        android:textStyle="bold" />
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:scrollbars="none"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:id="@+id/dynamic_profile"
                            android:layout_height="wrap_content">
                        </LinearLayout>
                    </HorizontalScrollView>
                    <View
                        android:layout_width="match_parent"
                        android:background="@color/white"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"                    android:layout_marginTop="10dp"
                        android:layout_height="0.3dp">
                    </View>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="About Me"
                        android:layout_margin="10dp"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_view_show_more"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"
                        android:text="I love discussing intellectual things and then some kinky love 😉"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="Appearance"
                       android:layout_margin="10dp"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:text="165 cm, 54 kg, indian appearance, athletic body"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>




        </LinearLayout>
    </ScrollView>

</RelativeLayout>
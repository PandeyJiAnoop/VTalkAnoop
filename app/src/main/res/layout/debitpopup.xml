<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/side_nav_bar">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/diamond"
            android:layout_centerInParent="true"
            android:background="@drawable/diamond" />
        <TextView
            android:layout_width="match_parent"
            android:inputType="number"
            android:maxLength="4"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:background="@null"
            android:textSize="18dp"
            android:textStyle="bold"
            android:text="000"
            android:layout_centerVertical="true"
            android:textColorHint="#AEACAC"
            android:textColor="@color/white"
            android:layout_toRightOf="@+id/diamond"
            android:layout_height="wrap_content">
        </TextView>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:elevation="5dp"
            android:gravity="center"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="50dp"
                    android:padding="10dp"
                    android:id="@+id/rupeesymbol"
                    android:src="@drawable/diamond"
                    android:layout_height="50dp">
                </ImageView>
                <View
                    android:layout_width="0.1dp"
                    android:id="@+id/view"
                    android:layout_toRightOf="@id/rupeesymbol"
                    android:background="@color/grey"
                    android:layout_height="50dp">

                </View>
                <EditText
                    android:layout_width="match_parent"
                    android:hint="500"
                    android:inputType="number"
                    android:maxLength="4"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:background="@null"
                    android:textColorHint="#AEACAC"
                    android:id="@+id/rupee_et1"
                    android:textColor="@color/black"
                    android:layout_toRightOf="@+id/view"
                    android:layout_height="50dp">
                </EditText>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:elevation="5dp"
            android:gravity="center"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="50dp"
                    android:padding="10dp"
                    android:id="@+id/account_name"
                    android:src="@drawable/ic_support"
                    android:layout_height="50dp">
                </ImageView>
                <View
                    android:layout_width="0.1dp"
                    android:id="@+id/view1"
                    android:layout_toRightOf="@id/account_name"
                    android:background="@color/grey"
                    android:layout_height="50dp">

                </View>
                <EditText
                    android:layout_width="match_parent"
                    android:hint="Account holder name"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:background="@null"
                    android:textColorHint="#AEACAC"
                    android:id="@+id/name_et"
                    android:maxLength="100"
                    android:textColor="@color/black"
                    android:layout_toRightOf="@+id/view1"
                    android:layout_height="50dp">
                </EditText>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:elevation="5dp"
            android:gravity="center"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="50dp"
                    android:padding="10dp"
                    android:id="@+id/rupeesymbol1"
                    android:src="@drawable/ic_support"
                    android:layout_height="50dp">
                </ImageView>
                <View
                    android:layout_width="0.1dp"
                    android:id="@+id/view2"
                    android:layout_toRightOf="@id/rupeesymbol1"
                    android:background="@color/grey"
                    android:layout_height="50dp">

                </View>
                <EditText
                    android:layout_width="match_parent"
                    android:hint="Bank Account number"
                    android:inputType="number"
                    android:gravity="center_vertical"
                    android:background="@null"
                    android:layout_marginLeft="10dp"
                    android:textColorHint="#AEACAC"
                    android:id="@+id/account_no_et"
                    android:maxLength="50"
                    android:textColor="@color/black"
                    android:layout_toRightOf="@+id/view2"
                    android:layout_height="50dp">
                </EditText>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:elevation="5dp"
            android:gravity="center"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="50dp"
                    android:padding="10dp"
                    android:id="@+id/rupeesymbol2"
                    android:src="@drawable/ic_support"
                    android:layout_height="50dp">
                </ImageView>
                <View
                    android:layout_width="0.1dp"
                    android:id="@+id/view3"
                    android:layout_toRightOf="@id/rupeesymbol2"
                    android:background="@color/grey"
                    android:layout_height="50dp">

                </View>
                <EditText
                    android:layout_width="match_parent"
                    android:hint="IFSC Code"
                    android:gravity="center_vertical"
                    android:background="@null"
                    android:layout_marginLeft="10dp"
                    android:textColorHint="#AEACAC"
                    android:id="@+id/ifsc_et"
                    android:maxLength="40"
                    android:textColor="@color/black"
                    android:layout_toRightOf="@+id/view3"
                    android:layout_height="50dp">
                </EditText>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:elevation="5dp"
            android:gravity="center"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="50dp"
                    android:padding="10dp"
                    android:id="@+id/rupeesymbol4"
                    android:src="@drawable/ic_support"
                    android:layout_height="50dp">
                </ImageView>
                <View
                    android:layout_width="0.1dp"
                    android:id="@+id/view4"
                    android:layout_toRightOf="@id/rupeesymbol4"
                    android:background="@color/grey"
                    android:layout_height="50dp">

                </View>
                <EditText
                    android:layout_width="match_parent"
                    android:hint="Branch Name"
                    android:gravity="center_vertical"
                    android:background="@null"
                    android:textColorHint="#AEACAC"
                    android:id="@+id/branch_name_et"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:maxLength="50"
                    android:layout_toRightOf="@+id/view4"
                    android:layout_height="50dp">
                </EditText>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>






        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="10sp"
            android:id="@+id/tv"
            android:textColor="@color/green"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:text="your payment request has reached to the admin and it takes 1-2 working days.If this fails for any reason,you will receive a message from admin."
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <Button
            android:id="@+id/buttonOk1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/red"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:text="Submit"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>
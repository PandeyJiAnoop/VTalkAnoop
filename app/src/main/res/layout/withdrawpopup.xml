<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/side_nav_bar">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:background="@drawable/diamond" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        <androidx.cardview.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:elevation="5dp"
            android:gravity="center"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="50dp"
                    android:padding="10dp"
                    android:id="@+id/rupeesymbol"
                    android:src="@drawable/diamond"
                    android:layout_height="50dp">
                </ImageView>
                <View
                    android:layout_width="0.1dp"
                    android:id="@+id/view"
                    android:layout_toRightOf="@id/rupeesymbol"
                    android:background="@color/grey"
                    android:layout_height="50dp">

                </View>
                <EditText
                    android:layout_width="match_parent"
                    android:hint="500"
                    android:inputType="number"
                    android:maxLength="4"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:background="@null"
                    android:textColorHint="#AEACAC"
                    android:id="@+id/rupee_et"
                    android:textColor="@color/black"
                    android:layout_toRightOf="@+id/view"
                    android:layout_height="50dp">
                </EditText>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="10sp"
            android:id="@+id/tv"
            android:textColor="@color/green"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:text="Add one diamond equals to 1 rupee,your payment request has reached to the admin and it takes 1-2 working days.If this fails for any reason,you will receive a message from admin."
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <Button
            android:id="@+id/buttonOk"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/red"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:text="Submit"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>